<h1>Editing me</h1>

<%= error_messages_for :me %>

<% form_for(@me) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Subscribe token</b><br />
    <%= f.text_field :subscribe_token %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Image url</b><br />
    <%= f.text_area :image_url %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @me %> |
<%= link_to 'Back', mes_path %>

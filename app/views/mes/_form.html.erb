	<script type="text/javascript">
		
 $(document).ready(function() {

  $(function() {
		
		$("#searchcontrol").dialog({
			bgiframe: true,
			autoOpen: false,
			height: 500,
			width: 800,
			modal: true
		});

	});
		
	$('#imgSearchLink').click(function() {
		$('#searchcontrol').dialog('open');
	});

  $("#formLeftContainer *").tooltip();

 });
 
 function SearchCallback(result)
 {
 DisplayResults(result);
 }
 
	function DisplayResults(response)
    {
        var output = document.getElementById("output");
        output.innerHTML = "";
        var resultsHeader = document.createElement("h4");
        var resultsTable = document.createElement("table");
        output.appendChild(resultsHeader);
        output.appendChild(resultsTable);
    
        var results = response.SearchResponse.Image.Results;
        
        // Display the results header.
        resultsHeader.innerHTML = "Live Search API Version "
            + response.SearchResponse.Version
            + "<br />Image results for "
            + response.SearchResponse.Query.SearchTerms
            + "<br />Displaying "
            + (response.SearchResponse.Image.Offset + 1)
            + " to "
            + (response.SearchResponse.Image.Offset + results.length)
            + " of "
            + response.SearchResponse.Image.Total
            + " results<br />";
        
        // Display the Image results.
        var resultsRow = null;
        var resultsCell = null;
        var cells = 3;
        var rows = results.length / 3;
        var resultsIndex = 0;
        for (var i = 0; i < rows; ++i)
        {
            resultsRow = document.createElement("tr");
            resultsTable.appendChild(resultsRow);
            for(var j = 0; j < cells && resultsIndex < results.length; ++j)
            {
		          resultsCell = document.createElement("td");
		          resultsRow.appendChild(resultsCell);
		          resultsCell.innerHTML = "<a href=\""
		              + results[resultsIndex].MediaUrl
		              + "\" target=\"_new\"><img src=\""
		              + results[resultsIndex].Thumbnail.Url
		              + "\"></a><br /><a href=\""
		              + results[resultsIndex].Url
		              + "\">"
		              + results[resultsIndex].Title
		              + "</a><br />Dimensions: "
		              + results[resultsIndex].Width
		              + "x"
		              + results[resultsIndex].Height
		              + "&nbsp;<a href=\"#\" onclick=\"document.getElementById('me_image_url').value='" + results[resultsIndex].MediaUrl + "';$('#searchcontrol').dialog('close');\">Copy Url</a>";
		              resultsIndex++;
          	}
        }
    } 
    
   function clearMe()
   {
   		$('input:text').not('#me_title').val('');
   }    
		
	</script>
<%end%>


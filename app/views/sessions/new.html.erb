<h1>New session</h1>

<%= error_messages_for :user %>

<% form_for(:user, @user, :url => {:controller=>'sessions', :action=>'create'}) do |f| %>
    <div>
      <label for="user_login">Login:</label>
      <%= f.text_field :login %>
    </div>
    <div>
      <label for="user_password">Password:</label>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "Create" %>
<% end %>

<%= link_to 'Back', :controller => 'mes' %>

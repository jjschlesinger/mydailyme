  <a href="#" onclick="$('comments_<%=subscription.id%>').toggle();">Comments (<%= subscription.me.comments.count %>)</a>
  <div id="comments_<%=subscription.id%>" style="<% if @collapse %>display:none;<% end %> margin-left:10px;">
    <div id="comments_list_<%=subscription.id%>">
        <%= render :partial => 'comments/comment_list', :locals => { :comments => subscription.me.comments } %>
    </div>
    <div id="comment_add_<%=subscription.id%>">
    <% form_remote_tag :url => "/comments/create/#{subscription.id}", :update => "com_#{subscription.id}" do -%>
      <div><%= text_field_tag :comment_text %><%= image_submit_tag ("plus.png") %></div>
    <% end -%>
    
    </div>
    <div id="comment_error_<%=subscription.id%>">
    	<%= error_message %>
    </div>
  </div>

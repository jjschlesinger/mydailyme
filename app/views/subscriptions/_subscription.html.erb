<% for i in 0..subscription.pos_y %>
  <% if i == subscription.pos_y %>
  <div class="me" id="<%= "content_#{subscription.id}" %>" >
    <% if !subscription.me.nil? %>
    	<%= render :partial => 'mes/me', :locals => { :subscription => subscription, :show_only => false } %>
		<% else %>
		<div class="meBrokeTitle">
			<h1>Me no longer available</h1>
			<div class="broke_options">
			        <%= link_to "<img src='/images/destroy.png' alt='X' class='optionImage' />", subscription, :confirm => 'For real? You want to unsubscribe?', :method => :delete %>
			</div>
			<div class="meSpacer"></div>
		</div>
		<div class="mebody" id="<%= "mebody_#{subscription.id}" %>">
		</div>
		<% end %>			 
	</div>
	<% end %>
<% end %>
    
    

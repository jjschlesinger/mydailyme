<!-- start left box-->

<div id="leftcontent">
<% for subscription in @subscriptions_col1 %>
    <% for i in 0..subscription.pos_y %>
        <% if i == subscription.pos_y %>
            <div class="dropArea" id="<%= "drop_0-#{subscription.pos_y}" %>"></div>
            <div class="me" id="me_<%= subscription.me.id %>" <% if subscription.me.image_url != "" %>style="min-height:200px;"<% end %>>
                <h1><%= subscription.me.title %></h1>
                <% if subscription.me.image_url != "" %>
                    <img alt="me" src="<%= subscription.me.image_url %>" />
                <% end %>
                <% if subscription.me.section1.value != "" %>
                <p><i><%= Section.find(1).name %>:</i>
                <%= subscription.me.section1.value %></p>        
                <% end %>
                
                <% if subscription.me.section2.value != "" %>
                <p><i><%= Section.find(subscription.me.section1.section_id).name %>:</i>
                <%= subscription.me.section2.value %></p>        
                <% end %>
                
                <% if subscription.me.section3.value != "" %>
                <p><i><%= Section.find(subscription.me.section1.section_id).name %>:</i>
                <%= subscription.me.section3.value %></p>        
                <% end %>
                
               <% if subscription.me.section4.value != "" %>
                <p><i><%= Section.find(subscription.me.section1.section_id).name %>:</i>
                <%= subscription.me.section4.value %></p>        
                <% end %>
                
                <% if subscription.me.section5.value != "" %>
                <p><i>Soapbox:</i>
                <%= subscription.me.section5.value %></p>        
                <% end %>
            </div>
            <!--<%= draggable_element "me_#{subscription.me.id}", :revert => true %>
            -->
            <%= drop_receiving_element "drop_0-#{subscription.pos_y}", 
                :update => "subscription", :url => { :action => "add" },
                :accept => "subscriptions", :hoverclass => "dropAreaActive"
                %>
                
        <% end %>
    <% end %>
<% end %>
</div>

<!-- end left box-->


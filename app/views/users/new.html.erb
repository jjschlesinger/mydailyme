<h1>Create your Account</h1>
<div class="indent">
<%= error_messages_for :user %>

<% form_for(@user) do %>
  <div>
    <label for="user_login">Login (Valid email address)</label><br />
    <%= text_field :user, :login %>
  </div>
  <%= render :partial => 'form' %>
  <div>
    <%= submit_tag "Create" %>
  </div>

<% end %>
<%= link_to 'Back to Login', new_session_path %>
</div>